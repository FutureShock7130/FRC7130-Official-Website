---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta
			name="viewport"
			content="width=device-width"
		/><!-- Primary Meta Tags -->
		<title>FRC 7130 | Future Shock</title>
		<meta name="title" content="FRC 7130 | Future Shock" />
		<meta
			name="description"
			content="We are the FRC team from Mingdao High School, TW."
		/>

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://metatags.io" />
		<meta property="og:title" content="FRC 7130 | Future Shock" />
		<meta
			property="og:description"
			content="We are the FRC team from Mingdao High School, TW."
		/>
		<meta
			property="og:image"
			content="https://metatags.io/images/meta-tags.png"
		/>

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://metatags.io" />
		<meta property="twitter:title" content="FRC 7130 | Future Shock" />
		<meta
			property="twitter:description"
			content="We are the FRC team from Mingdao High School, TW."
		/>
		<meta
			property="twitter:image"
			content="https://metatags.io/images/meta-tags.png"
		/>

		<!-- Meta Tags Generated with https://metatags.io -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=K2D:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800&family=Noto+Sans+TC:wght@100;300;400;500;700;900&family=Rajdhani:wght@300;400;500;600;700&display=swap");
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			#da62c4 30%,
			white 60%
		);
	}

	::-webkit-scrollbar {
		width: 10px;
	}

	::-webkit-scrollbar-track {
		background: #000;
	}

	/* Handle */
	::-webkit-scrollbar-thumb {
		border-radius: 5px;
		background: #00678663;
	}

	/* Handle on hover */
	::-webkit-scrollbar-thumb:hover {
		background: #006686;
		border-radius: 5px;
	}

	::selection {
		background-color: #00678685;
	}

	* {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}
	html {
		font-family: "Noto Sans TC", sans-serif;
		background-color: #070707;
		color: #fff;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
			DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
	}

	body {
		overflow-x: hidden;
	}
</style>
